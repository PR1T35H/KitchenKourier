                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
                    app:layout_constraintVertical_bias="0.509"
                    tools:layout_margin="8dp">

                    <ImageView
                        android:id="@+id/categoryPic3"
                        android:layout_width="35dp"
